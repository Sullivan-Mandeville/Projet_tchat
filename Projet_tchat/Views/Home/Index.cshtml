@model IEnumerable<Projet_tchat.Models.PostVM>
@{ ViewBag.Title = "Index"; }

<h2>Tous les Posts</h2>

@foreach (var item in Model)
{
<div class="container " id="div_mesposts">


    <font face="Andale Mono">  @Html.DisplayFor(modelItem => item.nom) @Html.DisplayFor(modelItem => item.prenom)  </font> <font face="Andale Mono" size="2" color="grey">@Html.DisplayFor(modelItem => item.date_create)</font>
    <div class="col-sm-12">


        <div class="col-sm-12 MEFPOST" id="unedivdepost">

        </div>
    </div>
    <br /><br />
    <div id="touslescoms">
        @foreach (var com in item.Comments)
        {
            if (com.content != "")
            {
<div class="col-sm-12 " id="commentaire">
    <font face="Andale Mono"> @Html.DisplayFor(modelCom => com.nom)       @Html.DisplayFor(modelCom => com.prenom)  </font>
    <div class="col-sm-10">
        @Html.DisplayFor(modelCom => com.content)
    </div>
</div>

                        <br />}




                }
    </div>



    <div class="form-row" id="@item.PostID">
        <div id="contenu_comment" class="form-group col-md-11">
            <textarea class="form-control" id="ta">  </textarea>

        </div>
        <div class="col">
            <input type="submit" value="Envoyer" class="btn btn-secondary mb-2 fairecom" id="@item.PostID" />
        </div>

    </div>






</div>
                <br />
                                <br />
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="~/FrontEnd/lib/MEFPost.js"></script>
