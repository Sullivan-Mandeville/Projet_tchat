<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bootstrap Dashboard by Bootstrapious.com</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>


<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

<!-- Bootstrap CSS-->
<link rel="stylesheet" href="~/FrontEnd/vendor/bootstrap/css/bootstrap.min.css">
<!-- Font Awesome CSS-->
<link rel="stylesheet" href="~/FrontEnd/vendor/font-awesome/css/font-awesome.min.css">
<!-- Fontastic Custom icon font-->
<link rel="stylesheet" href="~/FrontEnd/css/fontastic.css">
<!-- Google fonts - Roboto -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
<!-- jQuery Circle-->
<link rel="stylesheet" href="~/FrontEnd/css/grasp_mobile_progress_circle-1.0.0.min.css">
<!-- Custom Scrollbar-->
<link rel="stylesheet" href="~/FrontEnd/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">
<!-- theme stylesheet-->
<link rel="stylesheet" href="~/FrontEnd/css/style.default.css" id="theme-stylesheet">
<!-- Custom stylesheet - for your changes-->
<link rel="stylesheet" href="~/FrontEnd/css/custom.css">
<!-- Favicon-->
<link rel="shortcut icon" href="~/FrontEnd/img/favicon.ico">
<!-- Tweaks for older IEs-->
<link rel="stylesheet" href="~/FrontEnd/css/custom.css">
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
@RenderSection("Styles", false)






<body>
    <!-- Side Navbar -->
    <nav class="side-navbar  navbar-fixed-top">
        <div class="side-navbar-wrapper">
            <!-- Sidebar Header    -->
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <!-- User Info-->
                <div class="sidenav-header-inner text-center">
                  

                    <h2 class="h5">@Session["Nom"] @Session["Prenom"] </h2>
                </div>
                <!-- Small Brand information, appears on minimized sidebar-->
                <div class="sidenav-header-logo"><a href="" @Url.Action("Index", "Home") "" class="brand-small text-center"> <strong>@Session["CarPrenom"]</strong><strong class="text-primary">@Session["CarNom"]</strong></a></div>
            </div>
            <!-- Sidebar Navigation Menus-->
            <div class="main-menu">
                <h5 class="sidenav-heading">Main</h5>
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    
                    @if (Session["Nom"] == null)
                    {
        <li> <a href="@Url.Action("Create", "Utilisateurs")"><i class="icon-user"></i>Sign in </a></li>
        <li> <a href="@Url.Action("Index", "Login")"><i class="icon-user"></i>Login </a></li>
        }
                    else
                    {
                    <li> <a href="@Url.Action("Index", "Home")"><i class="icon-home"></i> Acceuil</a></li>
                    <li> <a href="@Url.Action("Index", "Contact")"><i class="icon-mail"></i>Message </a></li>
                    <li> <a href="@Url.Action("Index", "Categories")"><i class="icon-grid"></i>Categories </a></li>



                    <li>
                        <a href="#exampledropdownDropdown" aria-expanded="false" data-toggle="collapse"> <i class="icon-interface-windows"></i>Posts </a>
                        <ul id="exampledropdownDropdown" class="collapse list-unstyled ">
                            <li> <a href="@Url.Action("Create", "Post")"><i class="icon-flask"></i>Créer </a></li>
                            <li> <a href="@Url.Action("Index", "Post")"><i class="icon-flask"></i>Post </a></li>
                            <li> <a href="@Url.Action("MesPosts", "Post")"><i class="icon-flask"></i>Mes Post </a></li>
                        </ul>
                    </li>
                    }
                 
                </ul>
            </div>

            @if(Session["Nom"]!=null )
            {

            
            <div class="admin-menu">
                <h5 class="sidenav-heading">Compte</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li> <a href="@Url.Action("Edit", "Utilisateurs")"><i class="icon-user"></i>Compte</a></li>
                    <li>
                     
                    </li>

                </ul>
            </div>
            }
        </div>
    </nav>
    <div class="page">
        <!-- navbar-->
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <a id="toggle-btn" href="#" class="menu-btn"><i class="icon-bars"> </i></a><a href="@Url.Action("Index", "Home")" class="navbar-brand">
                                <div class="brand-text d-none d-md-inline-block"><strong class="text-primary">Talks</strong></div>
                            </a>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">
                            <!-- Log out-->
                            @if (Session["Nom"] != null)
                            {
                <li class="nav-item"><i class="fa fa-sign-out"></i><span class="d-none d-sm-inline-block">@Html.ActionLink("Logout", "Deco", "Login") </span></li>}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        @RenderBody()

    </div>



</body>

<!-- JavaScript files-->

<script src="~/FrontEnd/vendor/jquery/jquery.min.js"></script>
<script src="~/FrontEnd/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/FrontEnd/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
<script src="~/FrontEnd/vendor/jquery.cookie/jquery.cookie.js"></script>
<script src="~/FrontEnd/vendor/chart.js/Chart.min.js"></script>
