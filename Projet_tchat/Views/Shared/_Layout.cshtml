<script src="~/FrontEnd/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
<script src="~/FrontEnd/js/charts-home.js"></script>
<script src="~/FrontEnd/lib/Login.js"></script>
<script src="~/FrontEnd/lib/SendMessage.js"></script>
<script src="~/FrontEnd/lib/fnc_jaime.js"></script>
<script src="~/FrontEnd/lib/Commentaire.js"></script>
<script src="~/FrontEnd/lib/Refresh.js"></script>
<script src="summernote.js"></script>

<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<script src="~/FrontEnd/lib/MEFPost.js"></script>
<script src="~/FrontEnd/js/front.js"></script>



@RenderSection("scripts", required: false)
</html>
