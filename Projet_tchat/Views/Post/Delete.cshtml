
@model Tchat.Core.Models.Post

@{
    ViewBag.Title = "Delete";
}



<h3>Voulez vous vraiment supprimer ce post?</h3>


<div class="container" id="div_mesposts">
    <div class="col-sm-12 ">
        Contenu :  @Html.DisplayFor(model => model.content)
    </div>

    <div class="col-sm-12">
        Nombre de like :  @Html.DisplayFor(model => model.nb_like)
    </div>

    <div class="col-sm-12">
        Date de création :  @Html.DisplayFor(model => model.date_create)
    </div>
    <br />

    <div class="col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" />
            </div>
        }
    </div>
    <br/>
    <br/>
</div>